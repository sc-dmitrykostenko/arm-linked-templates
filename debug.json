{
    "parameters": {
        "deployment.id": {
            "type": "string"
        },
        "deployment.location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "site.name": {
            "type": "string",
            "defaultValue": "[concat(parameters('deployment.id'), '-apps-b')]"
        },
        "site.location": {
            "type": "string",
            "defaultValue": "[parameters('deployment.location')]"
        },
        "sql.name": {
            "type": "string",
            "defaultValue": "[concat(parameters('deployment.id'), '-sql')]"
        },
        "sql.login": {
            "type": "string"
        },
        "sql.password": {
            "type": "securestring"
        },
        "hplan.name": {
            "type": "string",
            "defaultValue": "[concat(parameters('deployment.id'), '-hp')]"
        }
    },
    "variables" : {
        "hplan.reference": {
            "value": "[concat(resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hplan.name'))]"
        }
    },
    "resources" : [],
    "outputs" : {
        "sql.ref" : {
            "type" : "string",
            "value" : "[resourceId(subscription().subscriptionId, resourceGroup().name, 'Microsoft.Sql/servers', parameters('sql.name'))]"
        },
        "sql.fqdn" : {
            "type" : "string",
            "value" : "[reference(resourceId(subscription().subscriptionId, resourceGroup().name, 'Microsoft.Sql/servers', parameters('sql.name')), '2014-04-01-preview').fullyQualifiedDomainName]"
        }
    },
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}