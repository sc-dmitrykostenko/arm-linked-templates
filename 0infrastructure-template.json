{
    "parameters": {
        "deployment.id" : {
            "type" : "string"
        },
        "deployment.location" : {
            "type" : "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "sql.name": {
            "type": "string",
            "defaultValue" : "[concat(parameters('deployment.id'), '-sql')]"
        },
        "sql.login": {
            "type": "string"
        },
        "sql.password": {
            "type": "securestring"
        },
        "sql.location": {
            "type": "string",
            "defaultValue" : "[parameters('deployment.location')]"
        },
        "hplan.name": {
            "type": "string",
            "defaultValue" : "[concat(parameters('deployment.id'), '-hp')]"
        },
        "hplan.environment": {
            "type": "string",
            "defaultValue" : ""
        },
        "hplan.location": {
            "type": "string",
            "defaultValue" : "[parameters('deployment.location')]"
        },
        "hplan.sku": {
            "type": "string",
            "defaultValue" : "B1"
        },
        "hplan.capacity": {
            "type": "string",
            "defaultValue" : "1"
        },
        "hplan.workerSize": {
            "type": "string",
            "defaultValue" : "0"
        }
    },
    "resources": [
        {
            "apiVersion": "2016-03-01",
            "name": "[parameters('hplan.name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('hplan.location')]",
            "properties": {
                "name": "[parameters('hplan.name')]",
                "reserved": false,
                "hostingEnvironment": "[parameters('hplan.environment')]"
            },
            "sku": {
                "Name": "[parameters('hplan.sku')]",
                "Capacity": "[parameters('hplan.capacity')]"
            }
        },
        {
            "name": "[parameters('sql.name')]",
            "type": "Microsoft.Sql/servers",
            "location": "[parameters('sql.location')]",
            "apiVersion": "2014-04-01-preview",
            "properties": {
                "administratorLogin": "[parameters('sql.login')]",
                "administratorLoginPassword": "[parameters('sql.password')]",
                "version": "12.0"
            },
            "resources": [
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('sql.name'))]"
                    ],
                    "location": "[parameters('sql.location')]",
                    "properties": {
                        "endIpAddress": "0.0.0.0",
                        "startIpAddress": "0.0.0.0"
                    }
                }
            ]
        }
    ],
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}
