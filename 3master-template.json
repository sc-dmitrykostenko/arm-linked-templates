{
    "parameters": {
        "infrastructure.parameters": {
            "type": "string",
            "defaultValue": "0infrastructure-parameters.json"
        },

        "modules": {
            "type": "array",
            "defaultValue": []
        }
    },
    "variables" : {
        "base" : "[deployment().properties.templateLink.uri]"
    },
    "resources": [
        { 
            "apiVersion": "2015-01-01", 
            "name": "infrastructure", 
            "type": "Microsoft.Resources/deployments", 
            "properties": { 
                "mode": "incremental", 
                "templateLink": {
                    "uri": "[uri(variables('base'), '0infrastructure-template.json')]",
                    "contentVersion": "1.0.0.0"
                }, 
                "parametersLink": {
                    "uri": "[uri(variables('base'), parameters('infrastructure.parameters'))]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "apiVersion": "2015-01-01", 
            "name": "modules", 
            "type": "Microsoft.Resources/deployments",
            "copy" : {
                "count" : "[length(parameters('modules'))]",
                "properties": { 
                    "mode": "incremental", 
                    "templateLink": {
                        "uri": "[uri(variables('base'), concat(parameters('modules')[copyIndex()], '-template.json'))]",
                        "contentVersion": "1.0.0.0"
                    }, 
                    "parametersLink": {
                        "uri": "[uri(variables('base'), concat(parameters('modules')[copyIndex()], '-parameters.json'))]",
                        "contentVersion": "1.0.0.0"
                    }
                }
            } 
        }
    ],
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}